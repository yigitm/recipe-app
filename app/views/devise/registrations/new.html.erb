<h2 class="text-dark text-center">Sign up</h2>
<div class="d-flex justify-content-center align-items-center flex-column">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, class:'text-dark' %><br />
    <%= f.text_field :name, autofocus: true, class:'text-dark' %>
  </div>

  <div class="field">
    <%= f.label :email, class:'text-dark' %><br />
    <%= f.email_field :email, autofocus: true, class:'text-dark', autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class:'text-dark' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class:'text-dark', autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class:'text-dark' %><br />
    <%= f.password_field :password_confirmation, class:'text-dark', autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:'text-dark' %>
  </div>
<% end %>
</div>