<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :preparation_time, class: 'form-label' %>
    <%= form.number_field :preparation_time, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :cooking_time, class: 'form-label' %>
    <%= form.number_field :cooking_time, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :description, class: 'form-label' %>
    <%= form.text_field :description, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :public, class: 'form-label' %>
    <%= form.check_box :public %>
  </div>

  <div class="d-none">
    <%= form.text_field :user_id, :value => current_user.id %>
  </div>

  <div>
    <%= form.submit 'Add', class: 'btn btn-success my-4' %>
  </div>
<% end %>
