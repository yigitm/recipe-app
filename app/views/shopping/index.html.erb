<h2>Shopping List</h2>
<p>Amount of food items to buy: <span><%= @foods.count %></span> Total value of food needed: <span>$<%= @total_price %></span></p>

<table class="table table-striped table-hover" style="max-width: 700px">
  <thead>
  <tr>
    <th>Food</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>
  </thead>
  <tbody>
  <% @foods.each do |food| %>
    <tr>
      <td><%= food[0] %></td>
      <td><%= food[1][:quantity] %></td>
      <td><%= food[1][:price] * food[1][:quantity] %></td>
    </tr>
  <% end %>
  </tbody>
</table>